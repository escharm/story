{
  "name": "@escharm/story",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/umd/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/umd/index.js",
      "import": "./dist/esm/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/umd/react.js",
      "import": "./dist/esm/react.js"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "require": "./dist/umd/vue.js",
      "import": "./dist/esm/vue.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "build": "rollup --config rollup.config.js --bundleConfigAsCjs",
    "typings": "tsc -v && tsc -b -v",
    "prepack": "rimraf dist && yarn typings && yarn build",
    "generate:dev": "openssl req -x509 -newkey rsa:2048 -nodes -sha256 -subj '/CN=localhost' -addext 'subjectAltName = DNS.1:localhost' -keyout server.key -out server.crt"
  },
  "devDependencies": {
    "@escharm/story-editor": "workspace:^",
    "@eslint-recommended/eslint-config": "^28.0.0",
    "@tailwindcss/vite": "^4.1.4",
    "@types/babel__core": "^7",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "vite": "*"
  },
  "dependencies": {
    "@babel/core": "^7",
    "@babel/helpers": "^7",
    "@babel/plugin-syntax-typescript": "^7.25.9",
    "@babel/preset-react": "^7",
    "@babel/preset-typescript": "^7",
    "@faker-js/faker": "^9.6.0",
    "@heroicons/react": "^2.2.0",
    "@use-gesture/react": "^10.3.1",
    "@vanilla-extract/css-utils": "^0.1.4",
    "openai": "^4.91.1",
    "tailwindcss": "^4.1.4",
    "valtio": "^2.1.4"
  }
}
