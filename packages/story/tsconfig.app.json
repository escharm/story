{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "emitDeclarationOnly": true,
    "lib": ["esnext", "DOM"],
    "paths": {
      "@escharm/story-editor/*": ["../story-editor/src/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "isolatedModules": false
  },
  "files": [],
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../story-editor"
    }
  ]
}
