{
  "importMap": "./import_map.json",
  "workspace": ["./packages/*","./examples/*"],
  "tasks": {
    "start": "deno run --allow-all src/main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test"
  },
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["node_modules/"]
    }
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["node_modules/"]
    }
  }
}
